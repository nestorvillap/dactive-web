---
import Layout from '../layouts/Layout.astro';
import Header from '../sections/Header.astro';
import Hero from '../sections/Hero.astro';
import Datos from '../sections/Datos.astro';
import Radar from '../sections/Radar.astro';
import Mockup from '../sections/Mockup.astro';
import Identity from '../sections/Identity.astro';
import Download from '../sections/Download.astro';
import Footer from '../sections/Footer.astro';

const isLoggedIn = Astro.cookies.get('isLoggedIn')?.value === 'true';
export const prerender = false
---

<Layout title="Dactive - Conecta y Compite">
    { !isLoggedIn ? (
        <!-- Formulario de Contraseña -->
        <div id="password-form" class="px-4 sm:px-12 min-h-screen flex flex-col sm:flex-row items-center justify-center bg-primary">
            <div class="p-6 sm:p-8 bg-secondary rounded shadow-md text-center w-full max-w-md">
                <h1 class="text-xl font-black italic mb-4 text-primary">DACTIVE</h1>
                <form id="login-form-element"> {/* Cambiado a form para mejor semántica y manejo de submit */}
                    <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4">
                        <div class="relative w-full mb-2 sm:mb-0">
                            <input type="password" id="password-input" name="password" placeholder="Contraseña" class="py-2 px-4 rounded w-full outline-none bg-primary text-white h-10 pr-10">
                            <button type="button" id="toggle-password-visibility" class="absolute inset-y-0 right-0 px-3 flex items-center text-white">
                                <svg id="eye-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                <svg id="eye-slash-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hidden">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                                </svg>
                            </button>
                        </div>
                        <button type="submit" id="submit-button" class="bg-primary hover:scale-105 transition-all text-secondary font-bold py-2 px-4 rounded h-10 w-full sm:w-auto flex-shrink-0 cursor-pointer">
                            Entrar
                        </button>
                    </div>
                </form>
                <p id="error-message" class="text-red-900 mt-2 invisible">Contraseña incorrecta.</p>
            </div>
        </div>
    ) : (
        <!-- Contenido Principal -->
        <main id="main-content">
            <Header />
            <Hero />
            <Identity />
            <Mockup />
            <Radar />
            <Datos />
            <Download />
            <Footer />
        </main>
    )}

    <script>
        const passwordForm = document.getElementById('password-form');

        if (passwordForm) {
            const loginFormElement = document.getElementById('login-form-element') as HTMLFormElement;
            const passwordInput = document.getElementById('password-input') as HTMLInputElement;
            const errorMessage = document.getElementById('error-message');
            const togglePasswordButton = document.getElementById('toggle-password-visibility');
            const eyeIcon = document.getElementById('eye-icon');
            const eyeSlashIcon = document.getElementById('eye-slash-icon');

            async function handleLogin(event: Event) {
                event.preventDefault(); // Prevenir el envío tradicional del formulario
                const formData = new FormData(loginFormElement);

                try {
                    const response = await fetch('/api/login', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (response.ok) {
                        // Login exitoso, recargar la página para que el servidor envíe el contenido protegido
                        window.location.reload();
                    } else {
                        errorMessage.textContent = result.message || 'Contraseña incorrecta.';
                        errorMessage.classList.remove('invisible');
                        if (passwordInput) {
                            passwordInput.value = '';
                            passwordInput.focus();
                        }
                    }
                } catch (error) {
                    console.error('Error al intentar loguear:', error);
                    errorMessage.textContent = 'Error de conexión. Inténtalo de nuevo.';
                    errorMessage.classList.remove('invisible');
                }
            }

            if (loginFormElement) {
                loginFormElement.addEventListener('submit', handleLogin);
            }

            if (togglePasswordButton && passwordInput && eyeIcon && eyeSlashIcon) {
                togglePasswordButton.addEventListener('click', () => {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    eyeIcon.classList.toggle('hidden');
                    eyeSlashIcon.classList.toggle('hidden');
                });
            }
        }
    </script>
</Layout>