import DownloadIcon from '../assets/images/icons/download.svg'; // Importar el icono de descarga
---

<Layout title="Términos de Servicio - Dactive">
  <main class="container mx-auto px-4 py-8">
    <div class="flex justify-center mb-8">
      <a href="/" class="h-10">
        <Logo class="text-secondary" />
