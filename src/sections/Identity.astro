---
import volley from '@/assets/images/sports/volley.webp';
import Logo from '@/assets/images/logo.svg';
import baloncesto from '@/assets/images/sports/baloncesto.webp';
import balonBaloncesto from '@/assets/images/balon/baloncesto.png';
import pista from '@/assets/images/pistas/pista-roja.webp';
import mockup from '@/assets/images/phone/mockup-app.webp';
import Text from '@/assets/images/logo-text.svg';
import balonTenis from '@/assets/images/balon/tenis.png';
import shadow from '@/assets/images/balon/shadow.png';
---

<section id="identity-scroll" class="relative overflow-hidden bg-white dark:bg-black" aria-labelledby="identity-heading">
    <div id="identity-track" class="max-w-[1440px] mx-auto flex gap-8 px-5 lg:px-20 py-28 items-start">
        <div class="flex flex-col gap-8 flex-grow">
            <div class="flex items-stretch justify-between gap-8 h-60">
                <div class="flex items-center min-w-2/5 dark:text-white">
                    <h1 id="identity-heading" class="w-full text-left text-3xl flex-shrink-0">
                        <span class="font-bold">DACTIVE</span> <span lang="es">es la nueva app que conecta deportistas</span>
                    </h1>
                </div>
                <div class="gap-8 flex flex-grow">
                    <figure class="min-w-90 group flex-1 rounded-3xl overflow-hidden relative">
                        <img class="h-full w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-110" src={pista.src} alt="Pista deportiva con superficie roja" />
                        <Text class="absolute top-0 left-1/2 transform -translate-x-1/2 w-auto h-full px-8 text-white scale-10" aria-hidden="true" />
                    </figure>
                    <div class="group flex-none aspect-square bg-[linear-gradient(180deg,_#FBCF58_0%,_#EE7C1B_100%)] rounded-3xl items-center justify-center flex overflow-hidden" role="img" aria-label="Logo de DACTIVE">
                        <Logo class="w-32 h-32 text-white rotate-12 transition-all duration-1000 ease-in-out group-hover:rotate-[732deg]" />
                    </div>
                </div>
            </div>
            <div class="flex gap-8 justify-center items-stretch h-60">
                <figure class="min-w-90 group flex-1 rounded-3xl overflow-hidden flex relative">
                    <img class="h-full w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-110" src={mockup.src} alt="Mockup de la aplicación DACTIVE" />
                </figure>
                <div class="group flex-none w-72 rounded-3xl bg-black dark:bg-[#CBCBCB] p-8 flex flex-col justify-center items-center gap-4 relative overflow-hidden" role="img" aria-label="Eslogan de la aplicación: MATCH ES MÁS con pelotas de baloncesto y tenis">
                    <div class="relative w-full max-w-xs">
                        <div class="bg-secondary border-t-4 border-primary rounded-full px-8 py-3 text-left overflow-hidden">
                            <span class="text-primary text-3xl font-extrabold italic tracking-wider inline-block w-full transform transition-transform duration-500 ease-in-out group-hover:translate-x-[calc(100%-7.5rem)]">MATCH</span>
                        </div>
                        <img src={balonBaloncesto.src} alt="" class="absolute z-10 -right-0 -top-0 w-17 h-17 transform rotate-12 transition-transform duration-500 ease-in-out group-hover:-translate-x-[10rem]" aria-hidden="true" />
                        <img src={shadow.src} alt="" class="absolute z-0 right-1 -top-0 w-17 h-17 transition-transform duration-500 ease-in-out group-hover:-translate-x-[9.5rem]" aria-hidden="true" />
                    </div>
                    <div class="relative w-full max-w-xs">
                        <div class="bg-primary border-t-4 border-secondary rounded-full px-8 py-3 text-right">
                            <span class="text-secondary text-3xl font-extrabold italic tracking-wider inline-block w-full transform transition-transform duration-500 ease-in-out group-hover:-translate-x-[calc(100%-7.5rem)]" lang="es">ES MÁS</span>
                        </div>
                        <img src={balonTenis.src} alt="" class="z-10 absolute -left-0 -top-0 w-17 h-17 transform -rotate-12 transition-transform duration-500 ease-in-out group-hover:translate-x-[10rem]" aria-hidden="true" />
                        <img src={shadow.src} alt="" class="absolute z-0 left-1 -top-0 w-17 h-17 transition-transform duration-500 ease-in-out group-hover:translate-x-[9.5rem]" aria-hidden="true" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const section = document.getElementById('identity-scroll');
    const track   = document.getElementById('identity-track');

    if (section && track) {
        const factor = 2;      // velocidad del efecto
        const PAD    = 64;     // margen deseado (px)

        let base  = 0;         // ancho sobrante sin márgenes
        let extra = 0;         // ancho total a recorrer (incl. márgenes)
        let current = 0, target = 0, ticking = false;
        const ease = .1;

        /* ――― Se ejecuta en load y en resize ――― */
        const resize = () => {
            base  = track.scrollWidth - window.innerWidth; // Sobra “real”
            if (base <= 0) {                               // → Sin scroll
                extra = 0;
                section.style.height = '';
                track.style.position  = 'relative';
                track.style.transform = 'translateX(0)';
                track.style.paddingLeft  = track.style.paddingRight = PAD + 'px'; // margen estático opcional
                target = 0;
            } else {                                       // → Con scroll
                extra = base + PAD * 2;                    // añadimos PAD a ambos lados
                section.style.height = extra * factor + window.innerHeight + 'px';
                track.style.paddingLeft  = track.style.paddingRight = 0;          // limpia si venía de “sin scroll”
            }
        };

        /* ――― Animación suavizada ――― */
        const animate = () => {
            current += (target - current) * ease;
            track.style.transform = `translateX(${current}px)`;
            if (Math.abs(target - current) > 0.4) requestAnimationFrame(animate);
            else ticking = false;
        };

        resize();
        window.addEventListener('resize', resize);

        /* ――― Efecto durante el scroll ――― */
        window.addEventListener('scroll', () => {
            if (base <= 0) return;            // nada que hacer si cabe

            const start = section.offsetTop;
            const end   = start + extra * factor;
            const y     = window.scrollY;

            if (y < start) {                  // antes de entrar
                track.style.position = 'relative';
                target = PAD;
            } else if (y < end) {             // desplazamiento activo
                track.style.position = 'fixed';
                track.style.top = 0;
                track.style.left = 0;
                target = (start - y) / factor + PAD;
            } else {                          // después de salir
                track.style.position = 'relative';
                track.style.top = extra * factor + 'px';
                target = -base - PAD;
            }

            if (!ticking) { ticking = true; requestAnimationFrame(animate); }
        });
    }
</script>
