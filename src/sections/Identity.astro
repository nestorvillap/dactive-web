---
import volley from '@/assets/images/sports/volley.webp';
import Logo from '@/assets/images/logo.svg';
import baloncesto from '@/assets/images/sports/baloncesto.webp';
import pista from '@/assets/images/pistas/pista-roja.webp';
import mockup from '@/assets/images/phone/mockup-app.webp';
import Text from '@/assets/images/logo-text.svg';
---

<section class="mx-auto py-28 px-20 w-full items-center justify-center flex gap-8 bg-black text-white" aria-labelledby="identity-heading">
    <div class="flex flex-col gap-8">
        <div class="flex items-center justify-center  md:justify-between gap-20">
            {/* TEXTO ARRIBA*/}
            <h1 id="identity-heading" class="md:w-64 max-w-[350px] w-full md:text-wrap text-center text-3xl">
                <span class="font-bold">DACTIVE</span> <span lang="es">es la nueva app que conecta deportistas</span>
            </h1>
            {/* 2 IMAGENES ARRIBA*/}
            <div class="gap-8 hidden md:flex">
                <figure class="h-60 w-72 rounded-3xl overflow-hidden relative">
                    <img class="h-full w-full object-cover" src={volley.src} alt="Jugadores de voleibol en acción" />
                    <figcaption class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[40px] flex flex-col italic font-extrabold text-center" aria-label="Eslogan de la aplicación">
                        <span>MATCH</span>
                        <span class="flex gap-1" lang="es">
                            <span>ES</span> 
                            <span>MÁS</span>
                        </span>
                    </figcaption>
                </figure>
                <div class="w-56 h-60 bg-[linear-gradient(180deg,_#FBCF58_0%,_#EE7C1B_100%)] rounded-3xl items-center justify-center hidden lg:flex" role="img" aria-label="Logo de DACTIVE">
                    <Logo class="w-32 h-32 text-white rotate-12" />
                </div>
            </div>
        </div>
        {/* 2 IMAGENES ABAJO*/}
        <div class="flex gap-8 justify-center">
            <figure class="h-60 w-[439px] rounded-3xl overflow-hidden hidden lg:flex">
                <img class="h-full w-full object-cover" src={mockup.src} alt="Mockup de la aplicación DACTIVE" />
            </figure>
            <figure class="h-60 md:w-[439px] w-[350px] rounded-3xl overflow-hidden relative">
                <img class="h-full w-full object-cover" src={pista.src} alt="Pista deportiva con superficie roja" />
                <Text class="absolute top-0 left-1/2 transform -translate-x-1/2 w-auto h-full px-8 text-white scale-10" aria-hidden="true" />
            </figure>
        </div>
    </div>
    {/* 1 IMAGENEN A LA DERECHA DEL TODO*/}
    <figure class="w-[229px] h-[507px] rounded-3xl overflow-hidden relative hidden 2xl:block">
        <img class="h-full w-full object-cover" src={baloncesto.src} alt="Jugador de baloncesto en acción" />
    </figure>
</section>
