---
import accesibility from '@/assets/images/benefits/accessibility.svg';
import health       from '@/assets/images/benefits/health.svg';
import match        from '@/assets/images/benefits/match.svg';
import privacy      from '@/assets/images/benefits/privacy.svg';
import quick        from '@/assets/images/benefits/quick.svg';

const cards = [
  {
    title: 'Rapidez',
    description: '¡No busques partidos y haz que el partido te busque a tí! Nuevo sistema de matching ©DACTIVE!.',
    backgroundImage: quick.src
  },
  {
    title: 'Privacidad',
    description: 'Comparte menos en línea y más en persona. Juega manteniendo tus partidos e intereses en privado.',
    backgroundImage: privacy.src
  },
  {
    title: 'Afinidad',
    description: 'Nos aseguramos de que cada conexión refleje verdaderas coincidencias de intereses y disponibilidad.',
    backgroundImage: match.src
  },
  {
    title: 'Accesibilidad',
    description: 'Sólo con desearlo ya tienes medio partido. El resto déjaselo a DACTIVE.',
    backgroundImage: accesibility.src
  },
  {
    title: 'Bienestar',
    description: 'La pasión por el deporte y una competitividad sana guían cada partido. Una fusión de todos y para todos.',
    backgroundImage: health.src
  }
];
---

<section class="py-12 sm:py-16 md:py-20 lg:py-24 px-4 sm:px-6 md:px-10 lg:px-16 max-w-max-content mx-auto mb-16 sm:mb-20 md:mb-24 lg:mb-32 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-4 sm:gap-x-6 md:gap-x-8 gap-y-8 sm:gap-y-10 md:gap-y-12 items-stretch">
  <!-- Título principal -->
  <h2 class="flex flex-col items-center justify-center text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black italic text-center md:text-left text-secondary md:col-span-1 lg:col-span-1">
    <span class="">MATCH</span>
    <span class="text-[#964B0E]">ES MÁS</span>
  </h2>
  <!-- Cards -->
  {cards.map((Card) => (
    <div class={`relative aspect-[360/192] overflow-hidden rounded-2xl bg-[#FBCB4E]`}>
      <img
        src={Card.backgroundImage} 
        alt={Card.title} 
        class="absolute inset-0 w-full h-full object-cover"
      />
      
      <div class="absolute inset-0 p-3 sm:p-4 md:p-5 flex flex-col justify-center">
        <h3 class="font-black mb-1 sm:mb-1.5 md:mb-2 text-[#B55200] italic uppercase text-[clamp(1rem,3vw,1.2rem)]">
          {Card.title}
        </h3>
        <p class="text-[#8E4000] line-clamp-3 font-semibold text-[clamp(0.7rem,1vw,1rem)] ">
          {Card.description}
        </p>
      </div>
    </div>
  ))}
</section>
