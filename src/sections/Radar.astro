---
import radar from '@/assets/videos/radar.mp4'

const shadowPaddingValue = '25px';
---

<div
  class="glow-padding-wrapper mb-16 sm:mb-20 md:mb-24 lg:mb-32 px-4 sm:px-6 md:px-8 lg:px-10 xl:px-12">
  <div
    class="shadow-host max-w-max-content mx-auto rounded-2xl"
  >
    <section
      id="radar-section"
      class="rounded-2xl overflow-hidden relative bg-black flex flex-col gap-8 justify-center items-center"
    >
      <video src={radar} muted autoplay loop playsinline class="w-full block rounded-2xl">
        <source src={radar} type="video/mp4" />
      </video>
    </section>
  </div>
</div>

<style>
  .shadow-host {
    box-shadow: 0 0 35px 15px #FBCB4E;
  }
</style>